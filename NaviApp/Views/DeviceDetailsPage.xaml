<Page x:Class="NaviApp.Views.DeviceDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:md="clr-namespace:NaviApp.Models"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance d:Type=md:Device, IsDesignTimeCreatable=True}"
      d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <!-- 显示设备信息 -->
            <TextBlock Text="{Binding Name}" />
            
            <!-- 其他设备详情 -->
            <Grid Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label FontWeight="Bold" Grid.Column="0">归属*:</Label>
            
                <WrapPanel Grid.Column="1">
                    <Button Content="{Binding Name}"  Click="Room_Click"
                            Style="{StaticResource MaterialDesignFlatLightButton}"/>
                </WrapPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
