<Page x:Class="NaviApp.Views.RoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:NaviApp.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance d:Type=vm:RoomsViewModel, IsDesignTimeCreatable=True}"
      Title="RoomPage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Bar -->
        <ListBox DockPanel.Dock="Left" Width="100"
                 ItemsSource="{Binding Rooms}" 
                 DisplayMemberPath="Name" 
                 SelectedItem="{Binding SelectedItem}"
                 Grid.Column="0"/>
        
        <!-- Content Area -->
        <Frame Content="{Binding SelectedPageContent}"
                NavigationUIVisibility="Hidden"
               Grid.Column="1"/>
    </Grid>
</Page>
